pipeline {
 agent {
    docker {
      image 'abhishekf5/maven-abhishek-docker-agent:v1'
      args '--user root -v /var/run/docker.sock:/var/run/docker.sock' // mount Docker socket to access the host's Docker daemon
    }
  }
  stages {
    stage('Checkout') {
            steps {
                checkout([
                    $class: 'GitSCM',
                    branches: [[name: '*/main']],
                    userRemoteConfigs: [[
                        url: 'https://github.com/m-vp/Jenkins-Zero-To-Hero',
                        credentialsId: 'github'  // Ensure GitHub credentials are configured
                    ]],
                    extensions: [
                        [$class: 'WipeWorkspace'],  // Clean workspace before checkout
                        [$class: 'CleanBeforeCheckout'], // Clean untracked files
                        [$class: 'CloneOption',
                            shallow: true,  // Shallow clone for efficiency
                            depth: 1
                        ]
                    ]
                ])
            }
        }

        stage('Debug Workspace') {
            steps {
                sh 'ls -ld .git'  // Verify permissions for .git directory
            }
        }
    stage('Build and Test') {
      steps {
        sh 'ls -ltr'
        // build the project and create a JAR file
        sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
      }
    }
    stage('Static Code Analysis') {
      steps {
        // Skip Sonar analysis and output a "passed" message
        sh 'echo SonarQube analysis skipped and stage marked as passed'
      }
    }
    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "mvp126/ultimate-cicd:${BUILD_NUMBER}"
        // DOCKERFILE_LOCATION = "java-maven-sonar-argocd-helm-k8s/spring-boot-app/Dockerfile"
        REGISTRY_CREDENTIALS = credentials('docker-cred')
      }
      steps {
        script {
            sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && docker build -t ${DOCKER_IMAGE} .'
            def dockerImage = docker.image("${DOCKER_IMAGE}")
            docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                dockerImage.push()
            }
        }
      }
    }
    stage('Update Deployment File') {
    environment {
        GIT_REPO_NAME = "Jenkins-Zero-To-Hero"
        GIT_USER_NAME = "m-vp"
    }
    steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
            sh '''
                git config user.email "bl.en.u4cse22236@bl.students.amrita.edu"
                git config user.name "m-vp"
                git checkout main
                git pull https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} main
                BUILD_NUMBER=${BUILD_NUMBER}
                
                echo "Before sed:"
                cat java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                
                sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                
                echo "After sed:"
                cat java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                
                git add -A
                
                echo "Files staged for commit:"
                git status
                
                git commit -m "Update deployment image to version ${BUILD_NUMBER}"
                git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
            '''
        }
    }
}
  }
}
